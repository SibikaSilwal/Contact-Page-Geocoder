extends layout

block content
		.nav.nav-pills.nav-justified.bg-dark
			a(href="/").nav-link Home
			a(href="/mailer").nav-link Mailer
			a(href="/contact").nav-link Contacts
			a(href="/login").nav-link Login 

		form(action="contact", method="post").form
			.form-group
				input(type="text", name="myid", value= object._id, hidden=true)
				input(type="radio", name="prefix",class="theprefix", id="mr", value="Mr.")
				label(for="mr") Mr
				input(type="radio", name="prefix",class="theprefix", id ="mrs", value="Mrs.")
				label(for="mrs") Mrs
				input(type="radio", name="prefix",class="theprefix", id ="ms", value="Ms.")
				label(for="ms") Ms
				input(type="radio", name="prefix",class="theprefix", id ="dr", value="Dr.")
				label(for="dr") Dr
					
			.form-group
				label(for="fname") First name:
				input(type="text", name="first", id = "First Name", value =object.first)
				label(for="lname") Last name:
				input(type="text", name="last", id ="Last Name", value=object.last)
					
			.form-group
				label(for="street") Street:
				input(type="text", name="street", id="street", value=object.street)
				label(for="city") City:
				input(type="text", name="city", id="city", value=object.city) 
			.form-group
				label(for="state") State:
				select(name ="state", id="state")
					option(value="" selected) ---
					option( value="NY") NY 
					option(value="NJ")  NJ 
					option(value="PA") PA
					option(value="CT") CT 

				label(for="zip") Zip Code:
				input( type="text", name="zip", id="zip", value=object.zip)
			.form-group
				label(for="phone") Phone:
				input(type="tel", name="phone", id="phone", value=object.phone)
			.form-group
				label(for="email") Email:
				input( type="email", name="email", id="email", value=object.email)
			.form-group
				label(for="contact medium") Contact medium. Please check all that applies	
				input( type ="checkbox", name="byemail", id="email", value="on")
				label(for="email") Email			
				input(type ="checkbox", name="byphone", id="phone", value="on") 
				label( for="phone") Phone
						
				input( type ="checkbox", name="bymail", id="mail", value="on")
				label( for="mail") Mail
			.form-group
				button( type="submit", name="Submit", id="Submit").btn.btn-danger Add Contact